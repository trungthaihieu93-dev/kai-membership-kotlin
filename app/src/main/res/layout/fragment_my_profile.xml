<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include
        android:id="@+id/lToolbar"
        layout="@layout/layout_toolbar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/lToolbar"
        android:orientation="vertical"
        android:paddingStart="@dimen/_16sdp"
        android:paddingEnd="@dimen/_16sdp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/text_regular"
            android:text="@string/my_profile"
            android:textColor="@color/color_DE000000"
            android:textSize="@dimen/_26ssp" />


        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_26sdp"
            android:fontFamily="@font/text_medium"
            android:text="@string/full_name"
            android:textAllCaps="true"
            android:textColor="@color/color_364766"
            android:textSize="@dimen/_9ssp" />

        <EditText
            android:id="@+id/etFullNameMyProfile"
            style="@style/TextInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:inputType="text" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMessageFullNameEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/text_regular"
            android:text="@string/full_name_empty"
            android:textColor="@color/color_C42C15"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/text_medium"
            android:text="@string/date_of_birth"
            android:textAllCaps="true"
            android:textColor="@color/color_364766"
            android:textSize="@dimen/_9ssp" />

        <EditText
            android:id="@+id/etDateOfBirthMyProfile"
            style="@style/TextInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:focusable="false"/>

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:fontFamily="@font/text_medium"
            android:text="@string/phone_no"
            android:textAllCaps="true"
            android:textColor="@color/color_364766"
            android:textSize="@dimen/_9ssp" />

        <EditText
            android:id="@+id/etPhoneMyProfile"
            style="@style/TextInputEditTextStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:layout_marginTop="@dimen/_4sdp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/tvMessagePhoneEmpty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_4sdp"
            android:fontFamily="@font/text_regular"
            android:text="@string/phone_empty"
            android:textColor="@color/color_C42C15"
            android:textSize="@dimen/_10ssp"
            android:visibility="gone" />
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btUpdateProfile"
        style="@style/UnelevatedButtonEnableStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_12sdp"
        android:layout_alignParentBottom="true"
        android:text="@string/update_profile" />
</RelativeLayout>