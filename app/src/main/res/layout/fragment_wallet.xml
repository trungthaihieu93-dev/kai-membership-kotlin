<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="@dimen/_16sdp"
    android:layout_marginTop="@dimen/_70sdp"
    android:paddingEnd="@dimen/_16sdp"
    android:paddingBottom="@dimen/_16sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="@dimen/_4sdp"
        android:layout_height="@dimen/_178sdp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_card" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="@dimen/_25sdp"
            android:paddingTop="@dimen/_22sdp"
            android:paddingEnd="@dimen/_25sdp"
            android:paddingBottom="@dimen/_22sdp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_20sdp"
                android:layout_alignParentEnd="true"
                android:src="@drawable/ic_logo_card" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_medium"
                    android:text="@string/balance"
                    android:textAllCaps="true"
                    android:textColor="@color/color_B2FFFFFF"
                    android:textSize="@dimen/_9ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <com.google.android.material.textview.MaterialTextView
                        android:id="@+id/tvBalanceWallet"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/text_medium"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_16ssp"
                        tools:text="3,002.123" />

                    <com.google.android.material.textview.MaterialTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:fontFamily="@font/text_regular"
                        android:text="@string/kai_unit"
                        android:textColor="@color/color_B2FFFFFF"
                        android:textSize="@dimen/_16ssp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/tvAddressWallet"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:ellipsize="middle"
                    android:fontFamily="@font/text_regular"
                    android:singleLine="true"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_13ssp"
                    tools:text="0x9e991abd0sadsadasdasda0e7927dd4bdsa3d58" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:text="@string/holder"
                            android:textAllCaps="true"
                            android:textColor="@color/color_B2FFFFFF"
                            android:textSize="@dimen/_9ssp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvHolderWallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:text="AN NGUYEN" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.google.android.material.textview.MaterialTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:text="@string/member_since"
                            android:textAllCaps="true"
                            android:textColor="@color/color_B2FFFFFF"
                            android:textSize="@dimen/_9ssp" />

                        <com.google.android.material.textview.MaterialTextView
                            android:id="@+id/tvMemberSinceWallet"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/text_medium"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:text="07/2020" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rlNoDataTransaction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_nodata_transaction" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/text_medium"
                    android:text="@string/title_no_transaction"
                    android:textColor="@color/color_DE000000"
                    android:textSize="@dimen/_16ssp" />

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:fontFamily="@font/text_medium"
                    android:text="@string/content_no_transaction"
                    android:lineSpacingExtra="@dimen/_6sdp"
                    android:textColor="@color/color_8A000000"
                    android:textSize="@dimen/_11ssp" />
            </LinearLayout>

            <!--            <com.google.android.material.floatingactionbutton.FloatingActionButton-->
            <!--                android:id="@+id/fabNext"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_alignParentEnd="true"-->
            <!--                android:layout_alignParentBottom="true"-->
            <!--                android:layout_marginBottom="@dimen/_14sdp"-->
            <!--                app:backgroundTint="@color/color_67798E"-->
            <!--                app:elevation="0dp"-->
            <!--                app:maxImageSize="@dimen/_24sdp"-->
            <!--                app:srcCompat="@drawable/ic_plus_fab_wallet"-->
            <!--                app:tint="@color/white" />-->
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/llDataTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:fontFamily="@font/text_regular"
                android:text="@string/recent_transactions"
                android:textColor="@color/color_DE000000"
                android:textSize="@dimen/_16sdp" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvTransactionWallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:overScrollMode="never"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
        </LinearLayout>

        <com.github.clans.fab.FloatingActionMenu
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_14sdp"
            app:menu_fab_size="normal"
            fab:menu_animationDelayPerItem="50"
            fab:menu_backgroundColor="@android:color/transparent"
            fab:menu_colorNormal="@color/color_67798E"
            fab:menu_colorPressed="@color/color_67798E"
            fab:menu_icon="@drawable/ic_plus_fab_wallet"
            app:menu_labels_margin="@dimen/_8sdp"
            fab:menu_labels_position="left"
            app:menu_labels_textSize="@dimen/_8sdp"
            fab:menu_labels_style="@style/MenuLabelsFABStyle"
            fab:menu_openDirection="up">

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabBuy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_type_buy_transaction_fab"
                app:fab_colorPressed="@color/white"
                fab:fab_colorNormal="@color/white"
                fab:fab_label="@string/label_menu_fab_buy" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabReceive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_type_get_transaction_fab"
                app:fab_colorPressed="@color/white"
                fab:fab_colorNormal="@color/white"
                fab:fab_label="@string/label_menu_fab_get" />

            <com.github.clans.fab.FloatingActionButton
                android:id="@+id/fabSend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_type_send_transaction_fab"
                app:fab_colorPressed="@color/white"
                fab:fab_colorNormal="@color/white"
                fab:fab_label="@string/label_menu_fab_send" />

        </com.github.clans.fab.FloatingActionMenu>
    </RelativeLayout>
</LinearLayout>