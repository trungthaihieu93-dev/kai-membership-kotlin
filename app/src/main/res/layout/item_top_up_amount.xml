<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center"
    android:orientation="vertical"
    android:layout_marginBottom="@dimen/_8sdp">
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvPriceValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/text_medium"
        android:textColor="@color/color_DE000000"
        android:alpha="0.3"
        android:textSize="@dimen/_11ssp"
        tools:text="50.000 VND" />
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tvKAIValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/text_medium"
        android:textColor="@color/color_B0B7C3"
        android:textSize="@dimen/_9ssp"
        android:alpha="0.3"
        tools:text="166.666 KAI" />
</LinearLayout>