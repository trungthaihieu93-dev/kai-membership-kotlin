<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:textColorHint">@color/colorPrimary</item>
        <item name="android:windowBackground">@color/color_background_app</item>
    </style>

    <style name="DialogBaseTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog" />

    <style name="DialogDimTheme" parent="DialogBaseTheme">
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Widget.AppTheme.BottomSheet" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
    </style>

    <style name="AppBottomSheetDialogThemeBorder" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="android:windowSoftInputMode">adjustResize</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/background_bottom_sheet</item>
    </style>

    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/color_DE000000</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
        <item name="strokeWidth">@dimen/_1sdp</item>
        <item name="strokeColor">@color/color_C9CED6</item>
    </style>

    <style name="UnelevatedButtonEnableStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:background">@drawable/gradient_button</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/white</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="UnelevatedButtonDisableStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/color_E1E4E8</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/color_717D92</item>
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="UnelevatedButtonDisableStyleUtilities" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/color_E6EAEF</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">@dimen/_4sdp</item>
        <item name="android:insetBottom">@dimen/_4sdp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/color_29323D</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="SmallUnelevatedButtonDisableStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:backgroundTint">@color/color_F7F8F9</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">5dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">5dp</item>
        <item name="android:letterSpacing">0</item>
        <item name="android:textColor">@color/color_364766</item>
        <item name="android:textSize">@dimen/_10ssp</item>
        <item name="cornerRadius">8dp</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="CustomCardViewStyle" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/ShapeAppearanceOverlay_card_custom_corners</item>
    </style>


    <style name="ShapeAppearanceOverlay_card_custom_corners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">@dimen/_16sdp</item>
        <item name="cornerSizeTopLeft">@dimen/_16sdp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>

    <style name="TextInputEditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">@drawable/background_edittext</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:textColor">@color/color_DE000000</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColorHint">@color/color_94A2B2</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="TextInputEditTextStyleNoBackground" parent="Widget.AppCompat.EditText">
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="android:textColor">@color/color_DE000000</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:textColorHint">@color/color_94A2B2</item>
        <item name="android:paddingStart">@dimen/_12sdp</item>
        <item name="android:paddingTop">@dimen/_10sdp</item>
        <item name="android:paddingEnd">@dimen/_12sdp</item>
        <item name="android:paddingBottom">@dimen/_10sdp</item>
    </style>

    <style name="TextInputLayoutStyleNormal" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
    </style>

    <style name="TextInputLayoutStylePassword" parent="Widget.Design.TextInputLayout">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="hintEnabled">false</item>
        <item name="passwordToggleDrawable">@drawable/ic_eye_edittext</item>
        <item name="passwordToggleEnabled">true</item>
    </style>

    <style name="BottomNavigationViewHome" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="itemTextAppearanceActive">@style/BottomNavigationView.TextActive</item>
        <item name="itemTextAppearanceInactive">@style/BottomNavigationView.TextInactive</item>
    </style>

    <style name="BottomNavigationView.TextActive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="fontFamily">@font/text_medium</item>
    </style>

    <style name="BottomNavigationView.TextInactive" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">@dimen/_9ssp</item>
        <item name="fontFamily">@font/text_regular</item>
    </style>

    <style name="MenuLabelsFABStyle">
        <item name="android:background">@drawable/background_label_menu_fab</item>
        <item name="android:textColor">@color/color_455571</item>
        <item name="android:fontFamily">@font/text_semi_bold</item>
    </style>

    <style name="CustomTextTabItemAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:fontFamily">@font/text_medium</item>
        <item name="tabSelectedTextColor">@color/color_DE000000</item>
        <item name="android:textColor">@color/color_8A94A6</item>
    </style>
</resources>